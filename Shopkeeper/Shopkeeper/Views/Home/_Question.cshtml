@model Question
@{
    var answer = Model.Item.ComponentNames.ToList();

    if (Model.Item.RequiresRecipe) {
        answer.Add("recipe");
    }
}

<input type="hidden" id="question" value="@Model.Item.Id" />
<input type="hidden" id="answer" value="@string.Join(",", answer)" />

<div class="target-item-container">
    <span class="target-item">
        <img id="target-item" src="@Model.GetUrl(Model.Item)" alt="@Model.Item.Name" />
    </span>
</div>

<div class="selected-items">
    @foreach (var _ in Model.Item.Components)
    {
        <span class="selected-item"></span>
    }
    @if (Model.Item.RequiresRecipe)
    {
        <span class="selected-item"></span>
    }
</div>

<div id="option-items" class="option-items">
    @foreach (var item in Model.Options.Randomize())
    {
        <span class="option">
            <img class="option-img" src="@Model.GetUrl(item)" alt="@item.Name" data-id="@item.Id" draggable="false" />
        </span>
    }
    <span class="option recipe">
        <img class="option-img" src="@Model.RecipeUrl" alt="Recipe" data-id="recipe" draggable="false" />
    </span>
</div>

<div class="messages">
    <div id="streak-message" class="show">
        Current Streak: <span id="streak">@Model.Streak</span>
    </div>
    <div id="incorrect-display">
        Incorrect! Streak Reset
    </div>
</div>
